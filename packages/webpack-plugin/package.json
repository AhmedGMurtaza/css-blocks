{
  "name": "@css-blocks/webpack-plugin",
  "version": "0.17.0",
  "description": "Webpack plugin for css-blocks.",
  "main": "dist/src/index.js",
  "scripts": {
    "prepublish": "tsc -p tsconfig.json",
    "pretest": "tsc -p tsconfig.json && tslint --project tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "test": "mocha dist/test --opts test/mocha.opts",
    "coverage": "istanbul cover -i dist/src/**/*.js --dir ./build/coverage node_modules/mocha/bin/_mocha -- dist/test --opts test/mocha.opts",
    "remap": "remap-istanbul -i build/coverage/coverage.json -o coverage -t html",
    "docs": "typedoc --out ./docs .",
    "watch": "watch 'npm run test' './src' './test' --wait=3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/css-blocks/css-blocks.git"
  },
  "keywords": [
    "css"
  ],
  "author": "Chris Eppstein",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/css-blocks/css-blocks/issues"
  },
  "types": "dist/src",
  "files": [
    "dist/src",
    "*.md",
    "test/mocha.opts"
  ],
  "homepage": "https://github.com/css-blocks/css-blocks/tree/master/packages/webpack-plugin#readme",
  "devDependencies": {
    "@css-blocks/code-style": "^0.17.0",
    "@types/async": "^2.0.40",
    "@types/chai": "^3.5.2",
    "@types/convert-source-map": "^1.3.33",
    "@types/debug": "0.0.29",
    "@types/extract-text-webpack-plugin": "^2.1.0",
    "@types/glob": "^5.0.30",
    "@types/node": "^7.0.13",
    "@types/webpack": "^3.0.14",
    "@types/webpack-merge": "0.0.4",
    "@types/webpack-sources": "^0.1.2",
    "chai": "^3.5.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "glob": "^7.1.2",
    "grunt": "^1.0.1",
    "grunt-release": "^0.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "mocha-typescript": "^1.0.23",
    "raw-loader": "^0.5.1",
    "remap-istanbul": "^0.9.5",
    "shelljs": "^0.7.8",
    "source-map-support": "^0.4.15",
    "style-loader": "^0.18.2",
    "tslint": "^5.1.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.1",
    "watch": "^1.0.2",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@opticss/element-analysis": "^0.2.0",
    "@opticss/template-api": "^0.2.0",
    "async": "^2.4.1",
    "convert-source-map": "^1.5.0",
    "css-blocks": "^0.17.0",
    "debug": "^2.6.8",
    "install": "^0.10.1",
    "loader-utils": "^1.0.1",
    "opticss": "^0.2.0",
    "postcss": "^6.0.14",
    "source-map": "^0.5.6",
    "webpack-sources": "^1.0.1"
  }
}
