{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2015",
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,

    // Environment Configuration
    "experimentalDecorators": true,
    "moduleResolution": "node",

    // Enhance Strictness
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,

    // output options
    "newLine": "LF",
    "outDir": "dist",
    "module": "commonjs",
    "traceResolution": false,
    "baseUrl": "dist/src",
    "paths": {
      "@glimmer/resolution-map-builder": [
          "types-local/@glimmer/resolution-map-builder" 
      ],
      "postcss": [
         "/Users/ceppstei/Work/sailfish/css-blocks/node_modules/postcss"
       ]
      // ,
      // "perfectionist": [
      //   "node_modules/css-blocks/types-local/perfectionist"
      // ],
      // "postcss-selector-parser": [
      //   "node_modules/css-blocks/types-local/postcss-selector-parser"
      // ],
      // "regexpu-core": [
      //   "node_modules/css-blocks/types-local/regexpu-core"
      // ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "sanity",
    "dist",
    "tsbuild",
    "node_modules",
    "test"
  ]
}
